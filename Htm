// Array to store quiz questions and answers
let quizData = [];

// Function to add a new question input field
function addQuestion() {
  const questionInput = prompt("Enter your question:");
  if (questionInput) {
    const answerInput = prompt("Enter the answer:");
    if (answerInput) {
      quizData.push({ question: questionInput, answer: answerInput });
      displayQuestions();
    } else {
      alert("Answer cannot be empty.");
    }
  } else {
    alert("Question cannot be empty.");
  }
}

// Function to display added questions
function displayQuestions() {
  const questionsContainer = document.getElementById("questions-container");
  questionsContainer.innerHTML = "";
  quizData.forEach((item, index) => {
    const questionDiv = document.createElement("div");
    questionDiv.textContent = `Q${index + 1}: ${item.question}`;
    questionsContainer.appendChild(questionDiv);
  });
}

// Function to submit the quiz
function submitQuiz() {
  // You can add logic here to handle quiz submission
  console.log("Quiz submitted:", quizData);
}


